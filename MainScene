   import javax.swing.*;
   import java.awt.*;
   import java.awt.event.*;

    public class MainScene extends Frame implements MouseListener 
   {
      boolean menu = true;
      boolean fleet = false;
      boolean battle = false;
      boolean leaderBoard = false;
      boolean login = false;
      boolean save = false;
   
   
   
   
   
       public static void main(String s[]) 
      {  
      
         JFrame frame = new JFrame("Space RPG");  
         JPanel panel = new JPanel();  
         panel.setLayout(new FlowLayout());  
         JButton b1 = new JButton("Start game");  
         JButton b2 = new JButton("Login"); 
         JButton b3 = new JButton("Leader Board"); 
      
         panel.setLayout(null);
         b1.setBounds(450, 400, 100, 50);
         panel.add(b1);		 
      
         b2.setBounds(250, 400, 100, 50);
         panel.add(b2);		 
      
         b3.setBounds(650, 400, 150, 50);
         panel.add(b3);		 
      
        
        
         
      
         frame.add(panel);  
         frame.setSize(1000, 700);  
         frame.setLocationRelativeTo(null);  
         frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);  
         frame.setVisible(true);  
      }  
}
